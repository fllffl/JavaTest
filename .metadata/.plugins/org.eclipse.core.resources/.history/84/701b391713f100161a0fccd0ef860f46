package happy;

import java.io.*;

public class IOtest {
	
	public void copy(InputStream in,OutputStream out) {
		byte[] buf = new byte[4096];
		int len = in.read(buf);
		while (len != -1)
			out.write(buf,0,len);
			
	}
	
	public static void main(String [] args){
		IOtest test = new IOtest();
		System.out.println("请输入字符");
		test.copy(System.in, System.out);
	}

}
